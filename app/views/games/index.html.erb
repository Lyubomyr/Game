<h1>Listing games</h1>

<table>
  <tr>
    <th>Details</th>
    <th>Width</th>
    <th>Height</th>
    <th>Colors</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @games.each do |game| %>
  <tr>
    <td><%= game.details_id %></td>
    <td><%= game.width %></td>
    <td><%= game.height %></td>
    <td><%= game.colors %></td>
    <td><%= link_to 'Show', game %></td>
    <td><%= link_to 'Edit', edit_game_path(game) %></td>
    <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

